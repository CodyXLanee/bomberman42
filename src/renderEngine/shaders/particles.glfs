#version 400

// in vec2 TexCoords;
// in vec4 ParticleColor;
out vec4 color;

// uniform sampler2D sprite;
uniform float dist;
uniform int type;

void main()
{
    if (type == 0)
        color = vec4(1.0, 1.0 , 0.0, 1.0 - dist / 3);
    else if (type == 1)
        color = vec4(1.0, 1.0 , 1.0, 0.8);
    else
        color = vec4(0.5, 0.5 , 0.5, 1.0);
} 